<beans>

	<bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">
		<property name="driverClass" value="net.sf.log4jdbc.DriverSpy" />
		<property name="jdbcUrl" value="jdbc:log4jdbc:mysql://127.0.0.1:3306/db_integration" />
		<property name="properties">
			<props>
				<prop key="user">learnintouch</prop>
				<prop key="password">mignet</prop>
				<prop key="c3p0.acquire_increment">5</prop>
				<prop key="c3p0.maxStatementsPerConnection">20</prop>
				<prop key="c3p0.maxStatements ">100</prop>
				<prop key="c3p0.minPoolSize">2</prop>
				<prop key="c3p0.maxPoolSize">5</prop>
			</props>
		</property>
	</bean>

